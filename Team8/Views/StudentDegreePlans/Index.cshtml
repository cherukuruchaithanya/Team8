@model IEnumerable<Team8.Models.StudentDegreePlan>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PlanNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlanAbbrev)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlanName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IncludesInternship)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlanAbbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlanName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IncludesInternship)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree.DegreeAbbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeStatus.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.GivenName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentDegreePlanId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentDegreePlanId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentDegreePlanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
